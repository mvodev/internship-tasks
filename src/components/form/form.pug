mixin form({ title=''}={})
	form.form&attributes(attributes)(data-component='form')
		.form__left-column
			h3.form__title=title
		.form__right-column
			+input-email({placeholder:'Email',title:'Email'})
			+textarea()
			+input-file()
			// +button({text:'Прикрепить файл',common:false})
			span.form__file-error.form_invisible-elem 
			+checkbox({id:'policy4',label:'Вы подтверждаете, что ознакомились',ref:'http://mock-address-change-me',link:' c политикой обработки персональных данныx'})
			+button({text:'Отправить'})