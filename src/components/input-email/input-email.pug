mixin input-email({ placeholder='',disabled=false,title='',name='email'}={})
	.input-email(class=disabled&&'input-email_disabled')(data-component='input-email')
		.input-email__wrapper
			input.input-email__input(type="text" placeholder=placeholder name=name)&attributes(attributes)
			span.input-email__title=title
			+svg('tip').input-email__svg.input-email_invisible
		span.input-email__error.input-email_invisible