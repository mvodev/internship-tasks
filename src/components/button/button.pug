mixin button({ common=true,text,disabled}={})
	button.button(class=common&&'button_common' class=disabled&&'button_disabled')&attributes(attributes)(data-component='button')
		span.button__text(class=common&&'button__text_common')!=text
		if common 
			+svg('arrow').button__svg.button__svg_common
		else 
			+svg('cross').button__svg.button__svg_attach